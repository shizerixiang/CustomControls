<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_main"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/flipboard_logo_400px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_main_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textColor="@color/colorTitleText"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/iv_item_main"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_item_main" />

    <TextView
        android:id="@+id/tv_item_main_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textColor="@color/colorDarkSubText"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_item_main_label"
        app:layout_constraintLeft_toLeftOf="@+id/tv_item_main_title"
        app:layout_constraintRight_toRightOf="@+id/tv_item_main_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_main_title" />

    <TextView
        android:id="@+id/tv_item_main_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Easy | View"
        android:textColor="@color/colorLightSubText"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_item_main"
        app:layout_constraintLeft_toLeftOf="@+id/tv_item_main_content"
        app:layout_constraintRight_toRightOf="@+id/tv_item_main_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_main_content"
        tools:ignore="SmallSp" />

</androidx.constraintlayout.widget.ConstraintLayout>
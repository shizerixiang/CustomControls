<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#333333">

    <com.beviswang.customcontrols.widget.maskimage.MaskImageView
        android:id="@+id/iv_item_main"
        android:layout_width="match_parent"
        android:layout_height="362dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="#333" />

    <TextView
        android:id="@+id/tv_item_main_tag"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_tag_red"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="控件展示"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_main_title"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_main_tag"
        tools:text="自定义控件演示" />

    <TextView
        android:id="@+id/tv_item_main_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ellipsize="end"
        android:text="@string/app_name"
        android:textColor="#eeffffff"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_item_main_title"
        app:layout_constraintRight_toRightOf="@+id/tv_item_main_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_main_title" />

    <TextView
        android:id="@+id/tv_item_main_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:ellipsize="end"
        android:text="Easy | View"
        android:textColor="#ffffff"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_item_main"
        app:layout_constraintLeft_toLeftOf="@+id/tv_item_main_content"
        app:layout_constraintRight_toRightOf="@+id/tv_item_main_content"
        tools:ignore="SmallSp" />


<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.XiamiMusicTabActivity">

    <include layout="@layout/layout_tool_bar" />

    <com.beviswang.customcontrols.widget.ZoomTabLayout
        android:id="@+id/ztl_xiami_music"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_below="@id/headerBar2"
        android:elevation="2dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingStart="26dp"
        android:paddingEnd="146dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_tool_bar" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_xiami_music"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/zoomTabLayout"
        android:layout_marginTop="-9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ztl_xiami_music" />

</androidx.constraintlayout.widget.ConstraintLayout>